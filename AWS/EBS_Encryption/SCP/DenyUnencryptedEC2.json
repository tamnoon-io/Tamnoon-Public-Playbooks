{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "NewUnencryptedVolumesCannotBeCreated",
            "Effect": "Deny",
            "Action": ["ec2:CreateVolume"],
            "Resource": "*",
            "Condition": {
                "Bool": {
                    "ec2:Encrypted": "false"
                }
            }
        },
        {
            "Sid": "InstancesWithUnencryptedVolumesCannotBeLaunched",
            "Effect": "Deny",
            "Action": ["ec2:RunInstances"],
            "Resource": "*",
            "Condition": {
                "Bool": {
                    "ec2:Encrypted": "false"
                }
            }
        },
        {
            "Sid": "EbsEncryptionByDefaultSettingCannotBeDisabled",
            "Effect": "Deny",
            "Action": ["ec2:DisableEbsEncryptionByDefault"],
            "Resource": "*"
        }
    ]
}